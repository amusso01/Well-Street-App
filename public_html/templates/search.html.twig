{% extends 'base.html.twig' %}

{% block nav %}
    {% include 'mainNav.html..twig' %}
{% endblock %}
{% block header %}
    <h1>Employees</h1>
{% endblock %}
{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            <h2>Search</h2>
            <form class="pure-form" method='post' action="?page=search">
                <span>Surname</span>
                <input type="text" id="surname"  name="search" class="pure-input-rounded">
                <button type="submit" class="pure-button">Search to edit</button>
            </form>
        </div>
        <hr>
        <div class="pure-u-1">
            {% if users == 0%}
                <p>No employee with this surname</p>
            {% else%}
            <table class="pure-table pure-table-horizontal">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tbody>
                {% for employee in users %}
                <tr>
                    <td>{{ employee.id_employee}}</td>
                    <td>{{ employee.name }}a</td>
                    <td>{{ employee.surname }}</td>
                    <td>{{ employee.email }}</td>
                    <td>{{ employee.phone_number }}</td>
                    <td><a href="{{ self }}?page=edit&id={{ employee.id_employee }}">Edit</a></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </div>
    </div>
{% endblock %}