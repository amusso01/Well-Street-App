{% extends 'base.html.twig' %}

{% block nav %}
    <div class="pure-menu">
        <a class="pure-menu-heading" href="{{ self }}?page={{ homeLink }}"><img class="pure-img-responsive" id="logoImg" src="{{ FILE_ROOT }}/media/images/logo.png" alt="well street logo"></a>
    </div>
{% endblock %}

{% block mainHeader %}
    <h1>Add Employees</h1>
{% endblock %}

 {% block content %}
    {% if add == 'confirm' %}
        <div class="pure-g">
            <div class="pure-u-1">
                <h1>New employee added</h1>
                <p>A confirmation email with username and password has been sent</p>
            </div>
            <div class="pure-u-1">
                <a class="pure-button pure-button-primary" href="{{ self }}?page=admin">Admin page</a>
            </div>
        </div>
    {% else %}
     <div class="pure-g">
         <div class="pure-u-1">
             <h1>Confirm details</h1>
         </div>
     </div>
    <div class="pure-g">
        <div class="pure-u-1-2">
            <ul>
                {% for key, user in userCredentials %}
                    {% if key == 'adminaccess' %}
                        <li>{{ key }}: Granted</li>
                    {% else %}
                        <li>{{ key }}: {{ user|e }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
         <div class="pure-u-1-2">
                <ul>
                    {% for key, user in userDetails %}
                         <li>{{ key }}: {{ user|e }}</li>
                     {% endfor %}
                </ul>
         </div>
        <div class="pure-u-1">
            <a class="pure-button pure-button-primary" href="{{ self }}?page=confirmdetails&add=confirm">Confirm</a>
            <a class="pure-button pure-button-primary" href="{{ self }}?page=addemployee">Back</a>
        </div>
    </div>
{% endif %}
 {% endblock %}