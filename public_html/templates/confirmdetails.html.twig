{% extends 'base.html.twig' %}

{% block nav %}
    <div class="pure-menu">
        <a class="pure-menu-heading" href="?page=admin"><img class="pure-img-responsive" id="logoImg" src="{{ FILE_ROOT }}/media/images/logo.png" alt="well street logo"></a>
    </div>
{% endblock %}
 {% block header %}
    <h1>Add new employee</h1>

 {% endblock %}
 {% block content %}

     <div class="pure-g">
         <div class="pure-u-1">
             <h1>Confirm details</h1>
         </div>
         <div class="pure-u-1">
            <ul>
                {% for key, user in userDetails %}
                     <li>{{ key }}: {{ user|e }}</li>
                 {% endfor %}
            </ul>
             <a class="pure-button pure-button-primary" href="{{ self }}?page=confirmdetails&add=confirm">Add Employee</a>
         </div>

     </div>
 {% endblock %}