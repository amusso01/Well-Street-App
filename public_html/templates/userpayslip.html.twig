{% extends 'base.html.twig'%}

{% block nav %}
    <div class="pure-menu custom-restricted-width">
        <a class="pure-menu-heading" href="{{ self }}?page={{ homeLink }}"><img class="pure-img-responsive" id="logoImg" src="{{ FILE_ROOT }}/media/images/logo.png" alt="well street logo"></a>
        <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="?page=userholiday" class="pure-menu-link"><i class="fas fa-plane"></i> Holiday</a></li>
            <li class="pure-menu-item pure-menu-selected"><a href="?page=userpayslip" class="pure-menu-link"><i class="fas fa-dollar-sign"></i> Payslip</a></li>
            <li class="pure-menu-item "><a href="?page=userrota" class="pure-menu-link"><i class="fas fa-clock"></i> Rota</a></li>
        </ul>
    </div>
{% endblock %}

{% block mainHeader %}
    <h1>Payslip</h1>
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            {% if noPayslip is defined %}
            <p><strong>{{ noPayslip }}</strong></p>
            {% else %}
                {{ html_tree|raw }}
            {% endif %}
        </div>

    </div>
{% endblock %}

{% block script %}
    <script src="media/js/php_file_tree_jquery.js" type="text/javascript"></script>
{% endblock %}