{% extends 'base.html.twig' %}

{% block nav %}
    <div class="pure-menu custom-restricted-width">
        <a class="pure-menu-heading" href="{{ self }}?page={{ homeLink }}"><img class="pure-img-responsive" id="logoImg" src="{{ FILE_ROOT }}/media/images/logo.png" alt="well street logo"></a>
        <ul class="pure-menu-list">
            <li class="pure-menu-item ">
                <a href="?page=employees" class="pure-menu-link">Employees</a>
            </li>
            <li class="pure-menu-item"><a href="?page=holiday" class="pure-menu-link">Holiday</a></li>
            <li class="pure-menu-item pure-menu-selected pure-menu-has-children">
                <a href="#" class="pure-menu-link ">Rota</a>
                <ul class="submenu">
                    <li class="pure-menu-item"><a href="?page=adminrotafoh" class="pure-menu-link">FOH rota</a></li>
                    <li class="pure-menu-item"><a href="?page=adminrotaboh" class="pure-menu-link">BOH rota</a></li>
                    <li class="pure-menu-item"><a href="?page=adminrotanewshift" class="pure-menu-link">Create new shift</a></li>
                </ul>
            </li>
        </ul>
    </div>
{% endblock %}
{% block content %}
    <div class="pure-g">
        <div class="pure-u-1-2">
            <h3>Enter the rota for the {{ department }} department</h3>
        </div>
        <div class="pure-u-1-2">
            {% if weekNumber > 1 %}
                <a id="nextWeek" href="?page={{ page }}&week={{ weekNumber }}&direction=prev">Prev week</a>
            {% endif %}
            <a id="nextWeek" href="?page={{ page }}&week={{ weekNumber }}&direction=next">Next week</a>
        </div>
        <div class="pure-u-1">
            <table class="pure-table">
                <thead>
                    <tr>
                        <th>Employees</th>
                        {% for day in week %}
                            <th>{{ day }}</th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                {% for employee in users %}
                    <tr>
                        <td>{{ employee.name}} {{ employee.surname }}</td>
                        {% for i in 0..6 %}
                            <td>
                                <select name="{{ employee.id_employee }}shift{{ i }}">
                                    <option value="5">OFF</option>
                                    {% for time in shift %}
                                        {% if time.id_shift != 5 %}
                                            <option value="{{ time.id_shift}}">{{ time.start_time }} to {{ time.finish_time }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </td>
                        {% endfor %}

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block script %}

{% endblock %}