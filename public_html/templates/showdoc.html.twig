{% extends 'base.html.twig' %}

{% block head %}
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
{% endblock %}

{% block header %}
    <h1>{{ fileName }}</h1>
{% endblock %}

{% block nav %}
    <div class="pure-menu custom-restricted-width">
        <a class="pure-menu-heading" href="{{ self }}?page={{ homeLink }}"><img class="pure-img-responsive" id="logoImg" src="{{ FILE_ROOT }}/media/images/logo.png" alt="well street logo"></a>
        <ul class="pure-menu-list">
            <li class="pure-menu-item ">
                <a href="?page=employees" class="pure-menu-link">Employees</a>
            </li>
            <li class="pure-menu-item"><a href="?page=holiday" class="pure-menu-link">Holiday</a></li>
            <li class="pure-menu-item pure-menu-selected"><a href="?page=documents" class="pure-menu-link">Documents</a></li>
            <li class="pure-menu-item"><a href="?page=payslip" class="pure-menu-link">Payslip</a></li>
            <li class="pure-menu-item"><a href="?page=communication" class="pure-menu-link">Communication</a></li>
            <li class="pure-menu-item pure-menu-has-children">
                <a href="?page=adminrota" class="pure-menu-link ">Rota</a>
                <ul class="submenu">
                    <li class="pure-menu-item"><a href="?page=adminrotafoh" class="pure-menu-link">FOH rota</a></li>
                    <li class="pure-menu-item"><a href="?page=adminrotaboh" class="pure-menu-link">BOH rota</a></li>
                    <li class="pure-menu-item"><a href="?page=adminrotanewshift" class="pure-menu-link">Create new shift</a></li>
                </ul>
            </li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1-3">
            <p>File full name: {{ fullName }}</p>
            <a class="pure-button" href="./../file_uploaded/documents/{{ downloadName }}" download>
                <i class="fas fa-arrow-circle-down"></i>
                Download
            </a>
            <a class="pure-button" href="#">
                <i class="fas fa-trash-alt"></i>
                Delete
            </a>
        </div>
        <div class="pure-u-2-3">
            <h3>File information</h3>
            <p>{{ info }}</p>
        </div>

    </div>
{% endblock %}