{% extends 'base.html.twig' %}

{% block nav %}
    <div class="pure-menu">
        <a class="pure-menu-heading" href="{{ self }}?page={{ homeLink }}"><img class="pure-img-responsive" id="logoImg" src="{{ FILE_ROOT }}/media/images/logo.png" alt="well street logo"></a>
        <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="?page=rota" class="pure-menu-link">Rota</a></li>
            <li class="pure-menu-item pure-menu-selected">
                <a href="?page=employees" class="pure-menu-link">Employees</a>
            </li>
            <li class="pure-menu-item"><a href="?page=holiday" class="pure-menu-link">Holiday</a></li>
        </ul>
    </div>
{% endblock %}
{% block header %}
    <h1>Employees</h1>
{% endblock %}
{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            <h2>Search</h2>
            <form class="pure-form" method='post' action="?page=search">
                <span>Surname</span>
                <input type="text" id="surname"  name="search" class="pure-input-rounded">
                <button type="submit" class="pure-button">Search</button>
            </form>
        </div>
        <hr>
        <div class="pure-u-1">
            <h2>Add new employee</h2>
            <form class="pure-form pure-form-aligned" method="post" action="?page=employees">
                <fieldset>
                    <legend>Details</legend>
                     <div class="pure-control-group">
                         <label for="uname">Username</label>
                         <input id="uname" type="text" name="uname" required value="{{ redisplayUser }}">
                         <span>{{ unameError }}</span>
                     </div>
                     <div class="pure-control-group">
                         <label for="password">Password</label>
                         <input id="password" type="password" name="pass" required>
                         <span>{{ passError }}</span>
                     </div>

                     <div class="pure-control-group">
                         <label for="admin" class="pure-checkbox"> Give admin access</label>
                         <input id="admin" type="checkbox" name="adminPriviledge" value="1">
                     </div>
                     <div class="pure-controls">
                         <button type="submit" class="pure-button pure-button-primary">Add Employee</button>
                     </div>
                 </fieldset>
             </form>
         </div>
    </div>
{% endblock %}

