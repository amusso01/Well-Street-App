{% extends 'base.html.twig'%}

{% block nav %}
    <div class="pure-menu custom-restricted-width">
        <a class="pure-menu-heading" href="{{ self }}?page={{ homeLink }}"><img class="pure-img-responsive" id="logoImg" src="{{ FILE_ROOT }}/media/images/logo.png" alt="well street logo"></a>
        <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="?page=userholiday" class="pure-menu-link"><i class="fas fa-plane"></i>  Holiday</a></li>
            <li class="pure-menu-item"><a href="?page=userpayslip" class="pure-menu-link"><i class="fas fa-dollar-sign"></i> Payslip</a></li>
            <li class="pure-menu-item pure-menu-selected"><a href="?page=userrota" class="pure-menu-link"><i class="fas fa-clock"></i> Rota</a></li>
        </ul>
    </div>
{% endblock %}

{% block mainHeader %}
    <h1>Rota</h1>
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            <h1>{{ RotaUpload }}</h1>
        </div>
        <hr>
        <br>
        <div class="pure-u-1">
            <h2>Current Week</h2>
            <table class="pure-table pure-table-bordered">
                <thead>
                <tr>
                    <th>Employee</th>
                    {% for day in thisWeek %}
                        <th>{{ day }}</th>
                    {% endfor %}
                </tr>
                </thead>

                <tbody>
                {% for name,date in currentWeek %}
                    {% if name  ==  user_id %}
                        <tr id="rotaSelf">
                            <td> {{ user|capitalize }}</td>
                        {% for array in date %}
                            {% for shift in array %}
                                {%  if shift == '' %}
                                    <td>OFF</td>
                                {%  else %}
                                    <td>{{ shift }}</td>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                        </tr>
                    {% else %}
                        <tr>
                            <td> {{ name|ucwords }}</td>
                            {% for array in date %}
                                {% for shift in array %}
                                    {%  if shift == '' %}
                                        <td>OFF</td>
                                    {%  else %}
                                        <td>{{ shift }}</td>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="pure-u-1">
            <h2>Next Week</h2>
            <table class="pure-table pure-table-bordered">
                <thead>
                <tr>
                    <th>Employee</th>
                    {% for day in nextWeek %}
                        <th>{{ day }}</th>
                    {% endfor %}
                </tr>
                </thead>

                <tbody>
                {% for name,date in weekAhead %}
                    {% if name  ==  user_id %}
                        <tr id="rotaSelf">
                            <td> {{ user|capitalize }}</td>
                            {% for array in date %}
                                {% for shift in array %}
                                    {%  if shift == '' %}
                                        <td>OFF</td>
                                    {%  else %}
                                        <td>{{ shift }}</td>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </tr>
                    {% else %}
                        <tr>
                            <td> {{ name|ucwords }}</td>
                            {% for array in date %}
                                {% for shift in array %}
                                    {%  if shift == '' %}
                                        <td>OFF</td>
                                    {%  else %}
                                        <td>{{ shift }}</td>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

